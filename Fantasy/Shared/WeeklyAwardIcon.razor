<div class="flex flex-col max-w-max items-center">
    <div class="font-medium text-center">@Category</div>
    @foreach (var team in Teams)
    {
        <div class="w-20 inline-block border-2 border-fantasy-green rounded-lg p-1 m-1">
            <div class="flex flex-col relative">
                <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">@Icon</div>
                <div class="self-center pt-5">
                    <TeamLogo LogoUrl="@team.Team.LogoURL" Alt="@team.Team.Name" Size=8></TeamLogo>
                </div>
            </div>
            <div class="flex flex-col">
                <div class="self-center text-sm">@team.Team.Abbreviation</div>
                <div class="self-center -mt-1 text-sm font-bold">@Score pts</div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Category { get; set; }
    [Parameter]
    public double Score { get; set; }
    [Parameter]
    public IEnumerable<TeamForWeek> Teams { get; set; }
}
