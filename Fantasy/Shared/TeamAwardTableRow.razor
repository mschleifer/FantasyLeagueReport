<div role="row" class="flex items-center border-t-2 border-gray-200">
    <div role="cell" class="flex-none py-6 px-2 sm:px-4">@Icon</div>
    <div role="cell" class="w-44 px-2 sm:px-4">@Category</div>
    <div role="cell" class="w-1/3 px-2 sm:px-4">
        @foreach(var team in Teams)
        {
            <div>@team.Team.Name</div>
        }
    </div>
    <div role="cell" class="flex-grow text-right px-2 sm:px-4">@Score pts</div>
</div>

@code {
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Category { get; set; }
    [Parameter]
    public double Score { get; set; }
    [Parameter]
    public IEnumerable<TeamForWeek> Teams { get; set; }
}