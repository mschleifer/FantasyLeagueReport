@page "/fetchdata"
@inject HttpClient Http

<h1>Teams</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (Teams == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>Ties</th>
                <th>Total Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Teams)
            {
            <tr>
                <td>@team.Name</td>
                <td>@team.Wins</td>
                <td>@team.Losses</td>
                <td>@team.Ties</td>
                <td>@team.TotalPointsScored</td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Team> Teams;

    protected override async Task OnInitializedAsync()
    {
        // TODO: Probably setup some kind of authorization on the api function
        Teams = await Http.GetFromJsonAsync<List<Team>>("/api/teams/551600/2020/8");
    }
}